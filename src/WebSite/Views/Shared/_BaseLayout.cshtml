@using Microsoft.Extensions.Options
@using WebSite.Core.Config
@inject IOptions<DevelopmentSettings> DevelopmentSettings

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewBag.Title - WebSite</title>

        <link rel="stylesheet" webpack-href="/build/common.css" />

        @RenderSection("styles", required: false)

    </head>
    <body>
        @RenderBody()
        
        <environment names="Development">
            <script src="http://localhost:@(DevelopmentSettings.Value.WebpackDevServerPort)/webpack-dev-server.js"></script>
        </environment>

        <script webpack-src="/build/common.js"></script>

        @RenderSection("scripts", required: false)

        <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                </div>
            </div>
        </div>
        
        @RenderSection("footer", required: false)
    </body>
</html>
